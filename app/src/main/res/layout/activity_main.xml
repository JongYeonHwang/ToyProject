<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/projectBlue1"
            android:id="@+id/view2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="229dp"
            android:layout_height="292dp"
            app:srcCompat="@drawable/icon_cloud1"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="44dp"/>
    <ImageView
            android:layout_width="279dp"
            android:layout_height="392dp" app:srcCompat="@drawable/icon_cloud2"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <View
            android:layout_width="280dp"
            android:layout_height="313dp"
            android:id="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#99FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.544"/>
    <TextView

            android:textColor="#3CB5DB"
            android:textStyle="bold"
            android:text="Welcome Back!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="76dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view2" android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.482"/>
    <TextView
            android:textColor="#3CB5DB"
            android:text="Login or create new account."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/view" app:layout_constraintVertical_bias="0.277"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.495" android:textSize="18sp"/>
    <TextView
            android:textColor="#787878"
            android:textStyle="bold"
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            android:layout_marginStart="36dp"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintVertical_bias="0.173"/>
    <EditText
            android:id="@+id/emeil"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.513"
            android:hint="        Email Adress"
            app:layout_constraintTop_toTopOf="@+id/view"
            android:layout_marginTop="128dp" tools:ignore="TouchTargetSizeCheck"/>
    <EditText
            android:id="@+id/password"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/emeil"
            android:hint="        password"
            android:layout_marginTop="28dp" tools:ignore="TouchTargetSizeCheck"/>
    <Button
            android:id="@+id/join"
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="@android:color/transparent"
            android:textColor="@color/projectBlue4"
            android:text="Singup"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin"
            app:layout_constraintHorizontal_bias="0.498"
            android:textAllCaps="false"/>
    <Button
            android:id="@+id/btnLogin"
            android:textStyle="bold"
            android:background="@drawable/blueround_button"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Login"
            android:layout_width="109dp"
            android:layout_height="45dp"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginBottom="112dp" android:textAllCaps="false"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck"/>
    <ImageView
            android:layout_width="17dp"
            android:layout_height="14dp" app:srcCompat="@drawable/icon_padlock" android:id="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/password"
            app:layout_constraintStart_toStartOf="@+id/password" android:layout_marginTop="13dp"
            android:layout_marginStart="8dp"/>
    <View
            android:background="#3CB5DB"
            android:layout_width="63dp"
            android:layout_height="3dp" android:id="@+id/view3"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/textView5"/>
</androidx.constraintlayout.widget.ConstraintLayout>