<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LodingActivity">

    <View
            android:background="@drawable/round"
            android:layout_width="242dp"
            android:layout_height="242dp" android:id="@+id/lodingBack" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/snowman"
            android:layout_width="wrap_content"
            app:lottie_rawRes="@raw/snowman"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            tools:ignore="ImageContrastCheck" android:visibility="visible" tools:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>