<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:ignore="MissingDefaultResource">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bg_base"
            android:id="@+id/bgMain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="380dp"
            android:layout_height="680dp"
            app:srcCompat="@drawable/bg_opercity"
            android:id="@+id/bgSub"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/postlist"
            app:layout_constraintTop_toTopOf="@+id/bgSub"
            app:layout_constraintEnd_toEndOf="@+id/bgSub"
            app:layout_constraintStart_toStartOf="@+id/bgSub"
            app:layout_constraintBottom_toBottomOf="@+id/bgSub"/>
    <Button
            android:text="작성"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:id="@+id/btn_regist"
            android:background="@color/projectBlue3"
            app:layout_constraintBottom_toBottomOf="@+id/bgMain"
            app:layout_constraintEnd_toEndOf="@+id/bgMain"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>