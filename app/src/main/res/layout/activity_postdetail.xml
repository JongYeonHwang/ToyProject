<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:ignore="MissingDefaultResource">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bg_base"
            android:id="@+id/bgMain3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="380dp"
            android:layout_height="680dp"
            app:srcCompat="@drawable/bg_opercity"
            android:id="@+id/bgMain33"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="274dp"
            android:layout_height="264dp"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/imgMain2"
            app:layout_constraintEnd_toEndOf="@+id/bgMain33"
            app:layout_constraintTop_toTopOf="@+id/bgMain33"
            app:layout_constraintStart_toStartOf="@+id/bgMain33"
            app:layout_constraintBottom_toBottomOf="@+id/bgMain33"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.174"/>
    <TextView
            android:text="PostText"
            android:layout_width="274dp"
            android:layout_height="200dp"
            android:id="@+id/postText"
            app:layout_constraintStart_toStartOf="@+id/bgMain33"
            app:layout_constraintEnd_toEndOf="@+id/bgMain33"
            app:layout_constraintTop_toBottomOf="@+id/imgMain2"
            android:layout_marginTop="16dp"/>
    <Button
            android:text="삭제"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnRemove"
            app:layout_constraintTop_toBottomOf="@+id/postText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>