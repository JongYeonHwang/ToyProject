<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" tools:ignore="MissingDefaultResource">

    <TextView
            android:text="01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNo"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textContent"
            app:layout_constraintHorizontal_bias="0.826" app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:text="메모 내용 표시"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textContent"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textDatetime"
            android:layout_marginEnd="24dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.466"/>
    <TextView
            android:text="10/25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDatetime"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.466" app:layout_constraintEnd_toStartOf="@+id/btnTt"
            android:layout_marginEnd="24dp"/>
    <Button
            android:text="상세"
            android:layout_width="64dp"
            android:layout_height="31dp"
            android:id="@+id/btnTt"
            android:background="#26D3DE"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnRemove"
            android:layout_marginEnd="24dp"
            app:layout_constraintVertical_bias="0.444"/>
    <Button
            android:text="삭제"
            android:layout_width="64dp"
            android:layout_height="31dp"
            android:id="@+id/btnRemove"
            android:background="#FF3333"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>